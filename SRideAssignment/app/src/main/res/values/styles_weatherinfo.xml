<resources xmlns:tools="http://schemas.android.com/tools">

    <!--region News Article -->
    <style name="WeatherInfo" />

    <style name="WeatherInfo.Title">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textview_size_normal</item>
    </style>

    <style name="WeatherInfo.Value">
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/textview_size_large</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/google_sans</item>
    </style>

</resources>
